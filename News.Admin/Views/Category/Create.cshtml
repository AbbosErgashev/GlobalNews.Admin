@model News.Admin.DTO.CategoryDto.CategoryCreateDto

@{
    ViewData["Title"] = "Create Category";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">Create Category</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus-circle me-1"></i>
            Add New Category
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-tag"></i>
                                </span>
                                <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-info">
                        <h5><i class="fas fa-info-circle"></i> Category Tips</h5>
                        <ul class="mb-0">
                            <li>Use clear, descriptive names</li>
                            <li>Avoid special characters</li>
                            <li>Keep names short but meaningful</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/css/createcategory.css" rel="stylesheet" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#Name').focus();
        });
    </script>
}