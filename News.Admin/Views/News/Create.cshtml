@using News.Admin.DTO.NewsDto
@model NewsItemCreateDto

@{
    ViewData["Title"] = "Create News";
}

<h1 class="text-center mb-4">📝 Create New News Item</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <h4 class="card-title text-center mb-4">Fill News Details</h4>
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Title" class="form-control" placeholder="News Title" />
                            <label asp-for="Title">Title</label>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="News Description" style="height: 100px"></textarea>
                            <label asp-for="Description">Description</label>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Category</label>
                            <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))" class="form-select">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MediaFile" class="form-label">Upload Media</label>
                            <input asp-for="MediaFile" type="file" class="form-control" />
                            <span asp-validation-for="MediaFile" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg shadow">Create News</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    ← Back to News List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
